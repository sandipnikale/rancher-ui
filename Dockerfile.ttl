# Multi-stage build for Rancher UI Extension
FROM node:16 AS builder

WORKDIR /build

# Copy package files
COPY package.json yarn.lock* ./
COPY pkg ./pkg

# Install dependencies
RUN yarn install --frozen-lockfile || yarn install

# Build the extension
RUN yarn build-pkg rancher-support-ui || true

# Final stage - nginx to serve the extension
FROM nginx:alpine

# Copy built extension
COPY --from=builder /build/dist-pkg /usr/share/nginx/html/

# Create nginx config
RUN cat > /etc/nginx/conf.d/default.conf <<'EOF'
server {
    listen 80;
    server_name _;
    
    # Enable directory listing
    location / {
        root /usr/share/nginx/html;
        autoindex on;
        autoindex_exact_size off;
        autoindex_localtime on;
        
        # CORS headers for extension loading
        add_header Access-Control-Allow-Origin * always;
        add_header Access-Control-Allow-Methods "GET, OPTIONS" always;
        add_header Access-Control-Allow-Headers "Content-Type" always;
        
        # Handle OPTIONS requests
        if ($request_method = OPTIONS) {
            return 204;
        }
    }
    
    # Specific handling for package.json
    location ~ /package.json$ {
        root /usr/share/nginx/html;
        add_header Content-Type application/json;
        add_header Access-Control-Allow-Origin * always;
    }
}
EOF

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]
